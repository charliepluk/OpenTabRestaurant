<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>OpenTab - Account</title>
  <link href="https://fonts.googleapis.com/css2?family=Prompt&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="/style.css" />
</head>

<body>
  <nav id="manageNav">
    <div class="manageLogo">
      <h1>OpenTab</h1>
    </div>
  </nav>

  <div class="manage-container">
    <div class="side-nav">
      <a href="/menu">
        <div class="side-nav-item">
          Menu
        </div>
      </a>
      <a href="/orders">
        <div class="side-nav-item">
          Orders
        </div>
      </a>
      <a href="/invoice">
        <div class="side-nav-item">
          Invoice
        </div>
      </a>
      <a>
        <div class="side-nav-item" style="background-color: rgb(221, 221, 221);">
          Account
        </div>
      </a>
      <a href="/users/logout">
        <div class="side-nav-item">
          Sign Out
        </div>
      </a>
    </div>

    <div class="account-container">
      <form action="/account/update" method="POST" class="menu-form" id="editAccountForm">
        <div class="menu-form-container">
          <div class="menu-form-header">
            <h3>Edit Account Info</h3>
            <p onclick="closeAccountEdit()">X</p>
          </div>
          <div class="menu-form-input">
            <label><b>Opening Time</b></label>
            <input id="editOpenTime" type="time" placeholder="4 PM" name="openTime" required />
          </div>

          <div class="menu-form-input">
            <label><b>Closing Time</b></label>
            <input id="editCloseTime" type="time" placeholder="3 AM" name="closeTime" required />
          </div>

          <div class="menu-form-input">
            <label><b>Description</b></label>
            <input id="editAccountDesc" type="text" placeholder="Restaurant Description" name="description" />
          </div>

          <div class="menu-form-submit">
            <button type="submit">
              Update
            </button>
          </div>
        </div>
      </form>

      <div class="menu-nav">
        <div>
          <h3>Account Details</h3>
        </div>
      </div>

      <div class="account-info-container">
        <div class="restaurant-info-section">
          <div class="section-title">
            <h2>Restaurant Information</h2>
          </div>
          <div id="restaurantInfo" class="restaurant-info">
          </div>
        </div>
      </div>
    </div>
  </div>

  <script type="text/javascript" src="/publicHeader.js"></script>
  <script type="text/javascript" src="/js/account.js"></script>
  <script type="text/javascript" src="/loaders/accountLoader.js"></script>
  <script src="/js/slide-nav.js"></script>
</body>

</html>