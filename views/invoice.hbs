<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>OpenTab - Invoice</title>
  <link href="https://fonts.googleapis.com/css2?family=Prompt&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="/style.css" />
</head>

<body>
  <nav id="manageNav">
    <div class="manageLogo">
      <h1>OpenTab</h1>
    </div>
  </nav>

  <div class="manage-container">
    <div class="side-nav">
      <a href="/menu">
        <div class="side-nav-item">
          Menu
        </div>
      </a>
      <a href="/orders">
        <div class="side-nav-item">
          Orders
        </div>
      </a>
      <a>
        <div class="side-nav-item" style="background-color: rgb(221, 221, 221);">
          Invoice
        </div>
      </a>
      <a href="/account">
        <div class="side-nav-item">
          Account
        </div>
      </a>
      <a href="/users/logout">
        <div class="side-nav-item">
          Sign Out
        </div>
      </a>
    </div>

    <div class="invoice-container">
      <div class="invoice-popup-container" id="invoicePopup">
        <div class="invoice-popup">
          <h2 id="popupOrderID"></h2>
          <h5 id="popupOrderCustomer"></h5>
          <h5>Ordered On: <span id="popupOrderDateTime"></span></h5>

          <div class="popupOrderedItems">
            <h3>Ordered Items:</h3>
            <div id="popupOrderedItemsList">
            </div>
            <h4>Total: <span id="popupOrderTotal">$12.00</span></h4>
          </div>

          <div class="invoice-popup-controls">
            <button onclick="closePopup()">Close</button>
          </div>
        </div>
      </div>

      <div class="menu-nav">
        <h3>View Invoice</h3>
      </div>

      <div class="invoice-items-container">
        <div class="invoice-items-section">
          <div class="section-title">
            <h2>Order History</h2>
          </div>
          <div id="invoiceList" class="items-list"></div>
        </div>
      </div>
    </div>
  </div>

  <script type="text/javascript" src="/publicHeader.js"></script>
  <script type="text/javascript" src="/js/invoice.js"></script>
  <script type="text/javascript" src="/loaders/invoiceLoader.js"></script>
  <script src="/js/slide-nav.js"></script>
</body>

</html>